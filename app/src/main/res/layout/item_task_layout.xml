<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/listItemLayout"
    android:background="@drawable/side_nav_bar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:background="@color/cardview_light_background"
        android:layout_margin="5dp"
        android:radius="10.0dip"
        android:layout_marginBottom="50dp"
        android:layout_marginVertical="50dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="10dp"
        android:padding="10dp"
        tools:ignore="PrivateResource,UselessParent">

        <TextView
            android:id="@+id/tv_task"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:gravity="center"
            android:textSize="16sp"
            android:ellipsize="end"
            android:textStyle="bold"
            tools:text="Приготовить супавыпоывалдповаыпывалавыпывапывапвыапывапывапывапваыпвыап"
            android:background="?attr/selectableItemBackground"
            tools:ignore="UnusedAttribute"/>

        <ImageView
            android:id="@+id/iv_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="0"
            android:paddingStart="20dp"
            android:paddingEnd="10dp"
            android:background="?attr/selectableItemBackground"
            android:src="@drawable/color_task"
            tools:ignore="ContentDescription" />
        <ImageView
            android:id="@+id/ivDay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:layout_gravity="center"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:background="?attr/selectableItemBackground"
            android:src="@drawable/dots_vert_32"
            tools:ignore="ContentDescription" />
    </LinearLayout>
</FrameLayout>